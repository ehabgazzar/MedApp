<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/drug_iv_status"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/blueborderdot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drug_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"

        app:layout_constraintBottom_toBottomOf="@+id/drug_iv_status"
        app:layout_constraintStart_toEndOf="@+id/drug_iv_status"
        app:layout_constraintTop_toTopOf="@+id/drug_iv_status"
        app:layout_constraintVertical_bias="0.727" />

    <TextView
        android:id="@+id/drug_tv_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/drug_iv_status"
        app:layout_constraintStart_toEndOf="@+id/drug_tv_time"
        app:layout_constraintTop_toTopOf="@+id/drug_iv_status"
        app:layout_constraintVertical_bias="0.727" />


    <CheckBox
        android:id="@+id/drug_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/check"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="@+id/drug_iv_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/drug_iv_status"
        app:layout_constraintVertical_bias="0.521" />

</android.support.constraint.ConstraintLayout>